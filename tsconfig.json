{
  "compilerOptions": {
    "rootDir": "./src",         // Tous les fichiers source seront sous le répertoire src
    "outDir": "./dist",         // Le répertoire de sortie pour les fichiers compilés
    "esModuleInterop": true,    // Compatibilité avec les modules CommonJS
    "strict": true,             // Activer la vérification stricte des types
    "skipLibCheck": true        // Ignorer les vérifications des fichiers de type
  },
  "include": [
    "src/**/*"                  // Inclure tous les fichiers sous le répertoire src
  ]
}